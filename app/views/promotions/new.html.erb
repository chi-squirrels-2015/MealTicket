<div class="container">
  <h1>New Promotion</h1>
  <%= form_for @promotion, :url => new_restaurant_promotion_path do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <p>
      <label for="amount">Set Min and Max Group Size</label>
      <input type="text" id="amount" readonly style="border:0; color:#f6931f; font-weight:bold;">
    </p>

    <div id="group_size_slider">
    </div>




    <div class="form-group">
      <%= f.label :preferred_group_size %>
      <%= f.text_field :preferred_group_size %>
    </div>
    <div class="form-group">
      <%= f.label :loss_tolerance %>
      <%= f.text_field :loss_tolerance %>
    </div>
    <div class="form-group">
      <%= f.label :min_spend %>
      <%= f.text_field :min_spend %>
    </div>
    <div class="form-group">
      <%= f.label :max_discount %>
      <%= f.text_field :max_discount %>
    </div>
    <div class="form-group">
      <%= f.submit %>
    </div>
  <% end %>
</div>
